}
.show_body{
    background-color: #fff;
}
.show_container{
    margin: 0 5%;
}
.card{
    border: 1px solid #ebebeb;
    border-radius: 3px;
    box-shadow: 1px 1px 1px #ebebeb;
    padding: 20rpx;
    margin-top: 20px;
}
.number{
    padding-top: 9rpx;
    padding-right: 50rpx;
}
.show_input_box_mini{
    display: flex;
    border-bottom: 1px solid #ebebeb;
    padding: 5px 10px;
}
.modify_btn{
    bottom: 0;
    color: white;
    margin-left: 30px;
    margin-right: 30px;
    background-color: rgba(160,176,208,1);
    opacity: 1;
    font-size: 15px;
}
.modify_btn_box{
    position: fixed;
    bottom: 10px;
    left: 0;
    right: 0;
    z-index: 100;
}

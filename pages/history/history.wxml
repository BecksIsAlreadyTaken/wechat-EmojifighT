<!--pages/history/history.wxml-->
<view class='historybody'>
  <view class="history" wx:for="{{list}}" wx:key="list" wx:for-index="idx" wx:for-item="item">
        <view data-item='{{item}}' bindtap='bindViewTap' class='item_box'>
        <view class='image'>
    <image style='width:100%;height:45px;' mode= 'scaleToFill' src="{{item.thumbnail}}"></image>
          </view>
          <view class='title'>{{item.name}}</view>
        </view>
  </view>
</view>

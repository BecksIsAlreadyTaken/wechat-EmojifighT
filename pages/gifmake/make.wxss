.make_body{
  background-color: #fff;
}
.make_container{
  margin: 0 5%;
}
.card{
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
  padding: 20rpx;
  margin-top: 20px;
}
.imagebox_make{
  text-align: center;
}

.image_make{
  width: 100%;
  height: 200px;
  text-align: center;
}
.image_make_name{
  text-align: right;
  font-size: 10px;
  color: #777;
}
.make_btn_box{
  position: fixed;
  bottom: 10px;
  left: 0;
  right: 0;
  z-index: 100;
}
.make_btn{
  color: white;
  margin-left: 30px;
  margin-right: 30px;
  background-color: rgba(160,176,208,1);
  opacity: 1;
  font-size: 15px;

}
.make_input_box{
  padding: 20rpx;
  font-size: 13px;
}
.make_input_box_mini{
  display: flex;
  border-bottom: 1px solid #ebebeb;
  padding: 5px 10px;
}
.number{
  padding-top: 5rpx;
  padding-right: 10rpx;
}

.temp {
  height: 200rpx;
}
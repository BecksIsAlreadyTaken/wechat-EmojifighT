.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.top_image{
  margin: 1%;
  flex: 0 0 98%;
}


.image_box{
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.image_show{
  box-sizing: border-box;
  margin: 1% 1%;
  flex: 0 0 48%;
  position: relative;
}
.title{
  color: #fff;
  font-size: 12px;
  left:0px;
  padding: 3px 2px 5px 2px;
  right: 0px;
  bottom: 4px;
  position:absolute;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 8px; 
  text-align: center;
}

